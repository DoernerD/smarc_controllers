<launch>

    <arg name="namespace" default="sam"/>
    
    <group ns="$(arg namespace)">
        <group ns="ctrl">

            <node name="lookahead_depth_node" pkg="sam_basic_controllers" type="depth_lookahead_node.py" output="screen">
                <param name="depth_top" value="/$(arg namespace)/dr/depth" />
                <param name="pitch_top" value="/$(arg namespace)/dr/pitch" />
                <param name="lookahead_depth" value="/$(arg namespace)/ctrl/lookahead_depth" />
                <param name="lookahead_dist" value="3." />
            </node>

            <!-- Thrusters controllers -->
            <node name="heading_pid" pkg="pid" type="controller" output="screen">
                <param name="Kp" value="1." />
                <param name="Ki" value="0.0" />
                <param name="Kd" value="0.0" />
                <param name="upper_limit" value="0.1" />
                <param name="lower_limit" value="-0.1" />
                <param name="windup_limit" value="1" />
                <param name="max_loop_frequency" value="100.0" />
                <param name="min_loop_frequency" value="1.0" />
                <param name="topic_from_plant" value="heading_pid/state" />  <!-- This must be always zero -->
                <param name="topic_from_controller" value="heading_pid/ctrl_effort" />
                <remap from="setpoint" to="heading_pid/setpoint" />
                <remap from="pid_enable" to="heading_pid/pid_enable" />
                <param name="setpoint_timeout" value="0.1" />
            </node>

            <node name="elevator_pid" pkg="pid" type="controller" output="screen">
                <param name="Kp" value="0.5" />
                <param name="Ki" value="0.0" />
                <param name="Kd" value="0.0" />
                <param name="upper_limit" value="0.1" />
                <param name="lower_limit" value="-0.1" />
                <param name="windup_limit" value="1" />
                <param name="max_loop_frequency" value="100.0" />
                <param name="min_loop_frequency" value="1.0" />
                <!-- <param name="topic_from_plant" value="/$(arg namespace)/dr/depth" /> -->
                <param name="topic_from_plant" value="/$(arg namespace)/ctrl/lookahead_depth" />
                <param name="topic_from_controller" value="elevator_pid/ctrl_effort" />
                <remap from="setpoint" to="elevator_pid/setpoint" />
                <remap from="pid_enable" to="elevator_pid/pid_enable" />
                <param name="setpoint_timeout" value="0.1" />
            </node>

            <node name="thruster_ctrl_node" pkg="sam_basic_controllers" type="thruster_ctrl_node.py"  output="screen">
                <param name="rudder_pid_effort" value="heading_pid/ctrl_effort" />
                <param name="elevator_pid_effort" value="elevator_pid/ctrl_effort" />
                <param name="thrust_cmd_topic" value="/$(arg namespace)/core/thrust_vector_cmd" />
            </node>

            <!-- VBS depth control -->
            <!-- TODO: Check for the topics, same as in the python file -->
            <group ns="vbs">
                <node name="depth_control" pkg="sam_basic_controllers" type="depth_control_node.py" output="screen">
                    <param name="Ki" value="1.0" />
                    <param name="Kp" value="40.0" />
                    <param name="Kd" value="1.0" />
                    <param name="Kaw" value="1.0" />
                    <param name="vbs_neutral" value="52.0" />

                    <param name="vbs_topic" value="/$(arg namespace)/core/vbs_cmd" />
                    <param name="current_depth_topic" value="/$(arg namespace)/dr/depth" />
                    <param name="depth_setpoint_topic" value="/$(arg namespace)/ctrl/lookahead_depth" />
                
                </node>

                <!-- ROS PID Package -->
                <!-- <node name="pid_actuator_vbs" pkg="sam_basic_controllers" type="pid_actuator_trim" output="screen">
                    <param name="topic_from_controller" value="control_action" />
                    <param name="topic_to_actuator" value="/$(arg namespace)/core/vbs_cmd" />
                    <param name="topic_from_plant" value="/$(arg namespace)/dr/depth" />
                    <param name="setpoint_req" value="setpoint" />
                    <param name="setpoint_res" value="setpoint_pid" />
                    <param name="setpoint_reached" value="setpoint_reached" />
                    <param name="setpoint_tolerance" value="0.05" />
                    <param name="neutral_point" value="55" />
                    <param name="ff_term" value="50" />
                </node>

                <node name="vbs_pid" pkg="pid" type="controller" output="screen">
                    <param name="Kp" value="50.0" />
                    <param name="Ki" value="0." />
                    <param name="Kd" value="0." />
                    <param name="upper_limit" value="50.0" />
                    <param name="lower_limit" value="-50.0" />
                    <param name="windup_limit" value="1" />
                    <param name="max_loop_frequency" value="100.0" />
                    <param name="min_loop_frequency" value="1.0" />
                    <param name="topic_from_plant" value="/$(arg namespace)/dr/depth" />
                    <param name="topic_from_controller" value="control_action" />
                    <remap from="setpoint" to="setpoint_pid" />
                    <remap from="pid_enable" to="pid_enable" />
                    <param name="setpoint_timeout" value="0.1" />
                </node> -->
            </group>

            <!-- LCG pitch control -->
            <group ns="lcg">
                <node name="pid_actuator_lcg" pkg="sam_basic_controllers" type="pid_actuator_trim"  output="screen" >
                    <param name="topic_from_controller" value="control_action" />
                    <param name="topic_to_actuator" value="/$(arg namespace)/core/lcg_cmd" />
                    <param name="topic_from_plant" value="/$(arg namespace)/dr/pitch" />
                    <param name="setpoint_req" value="setpoint" />
                    <param name="setpoint_res" value="setpoint_pid" />
                    <param name="setpoint_reached" value="setpoint_reached" />
                    <param name="setpoint_tolerance" value="0.05" />
                    <param name="neutral_point" value="50" />
                    <param name="ff_term" value="50." />
                </node>

                <node name="lcg_pid" pkg="pid" type="controller" output="screen">
                    <param name="Kp" value="100.0" />
                    <param name="Ki" value="0.0" />
                    <param name="Kd" value="0.0" />
                    <param name="upper_limit" value="50.0" />
                    <param name="lower_limit" value="-50.0" />
                    <param name="windup_limit" value="1" />
                    <param name="max_loop_frequency" value="100.0" />
                    <param name="min_loop_frequency" value="1.0" />
                    <param name="topic_from_plant" value="/$(arg namespace)/dr/pitch" />
                    <param name="topic_from_controller" value="control_action" />
                    <remap from="setpoint" to="setpoint_pid" />
                    <remap from="pid_enable" to="pid_enable" />
                    <param name="setpoint_timeout" value="0.1" /> 
                </node>
            </group>
        
        </group>
    </group>

</launch>
